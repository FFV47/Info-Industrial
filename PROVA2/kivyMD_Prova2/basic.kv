#:kivy 2.0.0

<MyWidget>:
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: 'Sistema de Cadastro de Produtos'
        MDBoxLayout:
            orientation: 'vertical'
            font_size: '14px'
            # padding: '10px'
            padding: '10px', '10px', '10px', '200px'
            spacing: '20px'
            adaptive_height: False
            MDTextField:
                id: product
                mode: 'rectangle'
                hint_text: 'Produto'
                size_hint: (0.2, None)
                size_y: 0.2
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
            MDTextField:
                id: brand
                mode: 'rectangle'
                hint_text: 'Marca'
                size_hint: (0.2, None)
                size_y: 0.2
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            MDTextField:
                id: stock
                mode: 'rectangle'
                hint_text: 'Estoque'
                size_hint: (0.2, None)
                size_y: 0.2
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            MDRectangleFlatButton:
                id: bt_register
                theme_text_color: 'Custom'
                text_color: 1, 1, 1, 1
                md_bg_color: 0, 0, 1, 1
                text: 'CADASTRAR'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_press: root.register()
